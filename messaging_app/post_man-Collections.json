{
    "info": {
        "name": "Messaging App API Tests",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Login - Get JWT Token",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Content-Type",
                        "value": "application/json"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\"username\": \"user\", \"password\": \"pass\"}"
                },
                "url": "http://localhost:8000/api/token/"
            }
        },
        {
            "name": "Create Conversation",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\"participants\": [1, 2]}"
                },
                "url": "http://localhost:8000/api/chats/conversations/"
            }
        },
        {
            "name": "Send Message",
            "request": {
                "method": "POST",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "body": {
                    "mode": "raw",
                    "raw": "{\"conversation\": 1, \"content\": \"Hello!\"}"
                },
                "url": "http://localhost:8000/api/chats/messages/"
            }
        },
        {
            "name": "Fetch Conversations",
            "request": {
                "method": "GET",
                "header": [
                    {
                        "key": "Authorization",
                        "value": "Bearer {{token}}"
                    }
                ],
                "url": "http://localhost:8000/api/chats/conversations/"
            }
        }
    ]
}